{
  "name": "prorecruitment-system",
  "version": "1.0.0",
  "description": "מערכת ניהול גיוס מתקדמת עם AI ואוטומציה",
  "private": true,
  "workspaces": [
    "prorecruit"
  ],
  "scripts": {
    "dev": "cd prorecruit && npm run dev",
    "build": "cd prorecruit && npm run build",
    "start": "cd prorecruit && npm run start",
    "lint": "cd prorecruit && npm run lint",
    "lint:fix": "cd prorecruit && npm run lint -- --fix",
    "type-check": "cd prorecruit && npx tsc --noEmit",
    "install:all": "npm install && cd prorecruit && npm install",
    "clean": "cd prorecruit && rm -rf .next node_modules && npm install"
  },
  "keywords": [
    "recruitment",
    "hr",
    "hiring",
    "candidates",
    "clients",
    "vendors",
    "nextjs",
    "react",
    "typescript"
  ],
  "author": "ProRecruit Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/prorecruitment-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/prorecruitment-system/issues"
  },
  "homepage": "https://github.com/your-org/prorecruitment-system#readme"
} 